<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Other_profile_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/dummyavatar" />

    <TextView
        android:id="@+id/Other_profilename_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="Jumara"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/Other_profile_imageview"
        app:layout_constraintStart_toEndOf="@+id/Other_profile_imageview"
        app:layout_constraintTop_toTopOf="@+id/Other_profile_imageview" />

    <TextView
        android:id="@+id/Other_post_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:text="Post"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followButton" />

    <TextView
        android:id="@+id/Other_following_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Following"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#101010"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followButton" />

    <TextView
        android:id="@+id/Other_followers_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Followers"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#101010"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/Other_following_textview"
        app:layout_constraintStart_toEndOf="@+id/Other_post_textview"
        app:layout_constraintTop_toBottomOf="@+id/followButton" />

    <TextView
        android:id="@+id/Other_post_count_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="19"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#121111"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Other_post_textview"
        app:layout_constraintStart_toStartOf="@+id/Other_post_textview"
        app:layout_constraintTop_toBottomOf="@+id/Other_post_textview" />

    <TextView
        android:id="@+id/Other_follower_count_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="100"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#121111"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Other_followers_textview"
        app:layout_constraintStart_toStartOf="@+id/Other_followers_textview"
        app:layout_constraintTop_toBottomOf="@+id/Other_followers_textview" />

    <TextView
        android:id="@+id/Other_following_count_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="88"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#101010"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Other_following_textview"
        app:layout_constraintStart_toStartOf="@+id/Other_following_textview"
        app:layout_constraintTop_toBottomOf="@+id/Other_following_textview" />

    <Button
        android:id="@+id/followButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Follow"
        android:visibility="invisible"
        app:cornerRadius="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Other_profilename_textview" />


</androidx.constraintlayout.widget.ConstraintLayout>