<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tourroom">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.profile.edit_profile_activity" />
        <activity android:name=".ui.profile.other_profile_activity" />
        <activity android:name=".ui.group.edit_group_info_activity" />
        <activity android:name=".ui.group.invite_other_activity" />
        <activity
            android:name=".ui.group.group_host_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".After_login_Activity"
            android:label="@string/after_login"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>